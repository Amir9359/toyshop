@model List<toyshop.Models.ViewModels.Product.ProductView>
@{
    var  productid=
     ViewData["Title"] = "لیست کالا ها";
    int couter = 1;
}
@section breadcrumb{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb bg-dark bg-opacity-10">
            <li class="breadcrumb-item align-text-top "><a class="pe-1   m-1 breadcrumb-link" asp-area="Admin" asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
            <li class="breadcrumb-item m-0" aria-current="page">لیست کالاها </li>

        </ol>
    </nav>


    <div class="card ">
 
            <div class="card-header ">
                <div class="d-flex align-items-center justify-content-between">
                    <h1 class="h5">لیست کالا ها</h1>
                    <div>
                        <a class="btn btn-primary btn-sm " data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">فیلتر</a>
                        <a class="btn btn-success btn-sm " asp-area="Admin" asp-controller="Product" asp-action="Add">افرزودن کالا</a>
                    </div>
                    </div>
             </div>
        <div class="card-body ">

            <div class="row justify-content-center">

                <div class="collapse col-md-6 " id="collapseExample">
                    <div class="card  mb-3  justify">
                        <div class="card-header style-1  overflow-hidden m-0 w-100 bg-info text-light">فیلتر</div>
                        <div class="card-body">

                            <form action="" class="form-control" method="post">
                                <div class="row  mb-3">
                                    <label for="Titletxt" class="form-label col-md-2">عنوان:</label>
                                    <div class="col-md-10">
                                        <input class="form-control " id="Titletxt" name="title">
                                    </div>
                                </div>

                                <div class="row  mb-3">
                                    <label for="Idtxt" class="form-label col-md-2">شناسه:</label>
                                    <div class="col-md-10">
                                        <input class="form-control " id="Idtxt" name="id">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Brandtxt" class="form-label col-md-2">برند:</label>
                                    <div class="col-md-10">
                                        <select class="form-select" id="Brandtxt" name="brand">
                                            <option selected disabled>لطفا انتخاب کنید...</option>
                                            <option value="1">سامسونگ</option>
                                            <option value="2">اپل</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="ddlgroup" class="form-label col-md-2">گروه:</label>
                                    <div class="col-md-10">
                                        <select class="form-select" id="ddlgroup" name="group">
                                            <option selected disabled>لطفا انتخاب کنید...</option>
                                            <option value="1">موبایل</option>
                                            <option value="2">وسایل گوشی</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="ddlState" class="form-label col-md-2">وضعیت:</label>
                                    <div class="col-md-10">
                                        <select class="form-select" id="ddlState" name="state">
                                            <option selected disabled>لطفا انتخاب کنید...</option>
                                            <option value="1">فعال</option>
                                            <option value="2">غیر فعال</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-primary pe-2  mb-2 text-center">فیلتر</button>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <nav aria-label="Page navigation example" dir="ltr">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <table class="table table-striped table-primary">
                <thead>
                    <tr>
                        <th scope="col" >#</th>
                        <th scope="col" style="width:25%">نام</th>
                        <th scope="col" style="width:10%">برند</th>
                        <th scope="col" style="width:10%">گروه </th>
                        <th scope="col" style="width:10%">وضعیت</th>
                        <th scope="col">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                            <tr>
                                <th scope="row">@couter</th>
                                <td>
                                    <strong><a class="text-decoration-none" asp-area="Admin" asp-controller="Home" asp-action="Index" asp-route-id="@item.Id">@item.PrimaryTitle</a></strong><br />
                                    <span>@item.SecondTitle</span><br />
                                    <span class="text-muted">شناسه :@item.Id</span>
                                </td>
                                <td>@item.group?.Title</td>
                                @if (item.state == toyshop.Models.Products.State.Enabled)
                                {
                                    <td>فعال</td>

                                }
                                else
                                {
                                    <td>غیر فعال</td>

                                }
                                <td><span>@item.Creator</span><br /><strong class="text-muted">تاریخ: @item.CreateDate</strong></td>
 
                   
                                <td class="align-middle">
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"></button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                            <li><a class="dropdown-item" asp-area="Admin"  asp-action="Edit" asp-route-Id="@item.Id">ویرایش</a></li>
                                            <li><a class="dropdown-item text-danger" asp-area="Admin"  asp-action="Delete" asp-route-Id="@item.Id">حذف</a></li>
                                        </ul>
                                    </div>
                                </td>
                               </tr>
                                { couter++; }
                            }
                            }

                        </tbody>
            </table>

            <nav aria-label="Page navigation example " dir="ltr">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>  


        <br />
        <br />

}


