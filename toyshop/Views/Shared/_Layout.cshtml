@using Microsoft.AspNetCore.Identity;
@using toysite.Models

@inject UserManager<User> _userManager;
@{

    string displayname = "";
    User Customer = null;
    if (User.Identity.IsAuthenticated)
    {
        Customer = await _userManager.FindByNameAsync(User.Identity.Name);
        displayname = Customer.Name + " " + Customer.LastName;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - فروشگاه اسباب بازی</title>
    @RenderSection(name: "Style", required: false)
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="/image/x-icon" href="~/img/logo.png" />
    <link href="~/css/master.css" rel="stylesheet">
    <link rel="stylesheet" id="switcher-css" type="text/css" href="~/plugins/switcher/css/switcher.css" media="all" />



</head>

<body class="animated-css">
    <div class="sp-body">

        <header class="header pageRow overflow-visible">
            <div class="wrapper">
                <div class="header-outer">
                    <div class="header-inner">
                        <div class="header-top row innerPageHeader">
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6"><a href="." class="logo"></a></div>
                            <div class="col-lg-9 col-md-9 col-sm-6 col-xs-6">
                                <i class="fa fa-bars mobileMenuNav whiteTxtColor"></i>
                                <nav class="nav-container customBgColor">
                                    <i class="fa fa-times mobileMenuNav small-device"></i>
                                    <ul class="menu">
                                        @if (Customer == null)
                                        {
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="Index" asp-controller="Home">خانه </a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="List" asp-controller="Home">محصولات</a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="Signin" asp-controller="Account">ورود</a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="Signup" asp-controller="Account">ثبت نام</a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="ContacttUs" asp-controller="Home">درباره ما</a></li>

                                        }
                                        else
                                        {
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="Index" asp-controller="Home">خانه </a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="List" asp-controller="Home">محصولات</a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-controller="Order" asp-action="Index">سبد خرید</a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="Index" asp-controller="Profile">پروفایل</a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="Signout" asp-controller="Account">خروج</a></li>
                                            <li><a class="roboto whiteTxtColor menu-item" asp-action="ContacttUs" asp-controller="Home">درباره ما</a></li>

                                            <li class="pull-left " style="margin-right: 70px;font-size: 18px"><a>@displayname به سایت خوش آمدید.</a></li>
                                        }

                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <section id="pageTitleBox" class="pageRow paralax skew skew-bottom customBgColor trianglifyBox">
            <div class="wrapper">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h1 class="page-title ralewayLight whiteTxtColor">@ViewData["Massage"]</h1>
                    </div>
                </div>
            </div>
            <div class="skew_appended whiteSection"></div>
        </section>
        @RenderBody()
        
    <footer id="footer" class="pageRow skew skew-top darkFooter">
